<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        android:orientation="vertical"
   >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/descricao.."
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"/>


        <TextView
            android:id="@+id/txtDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="############"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categoria:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"/>


        <TextView
            android:id="@+id/txtCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="############"
            android:textSize="14sp" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/faixaprecovitrine"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"/>


        <TextView
            android:id="@+id/txtFaixaPreco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="#### - ####"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/anunciadaEm"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"/>


        <TextView
            android:id="@+id/txtDataCriacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="##/##/####"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tags"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/txtTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="###, ###, ###, ######"
            android:textSize="14sp"
            android:visibility="gone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/links"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/txtLinks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:layout_marginBottom="10dp"
            android:text="#############, ###########, ###########"
            android:textSize="14sp"
            android:visibility="gone"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/linha"
            android:orientation="vertical"
            android:showDividers="beginning">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Localização:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"/>


            <TextView
                android:id="@+id/txtLocalizacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="############"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/linha"
            android:orientation="vertical"
            android:showDividers="beginning">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Anunciante:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

<!--
            <RelativeLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content">-->



            <TextView
                android:id="@+id/txtNomeAnunciante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="############"
                android:textSize="14sp" />

       <!--     <Button
                android:id="@+id/btnChat"
                android:background="@null"
                android:textColor="@color/colorRed"
                android:textSize="16dp"
                android:layout_width="200dp"
                android:layout_height="34dp"
                android:layout_marginRight="8dp"
                android:text=" Falar com o anunciante"
                android:stateListAnimator="@null"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/ic_chat"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            </RelativeLayout>-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="E-mail:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"/>


            <TextView
                android:id="@+id/txtEmailAnunciante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="############"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvTelefone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Telefone:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"/>


            <TextView
                android:id="@+id/txtTelefone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="############"
                android:textSize="14sp" />


            <Button
                android:id="@+id/btnChat"
                android:background="@null"
                android:textColor="@color/colorRed"
                android:textSize="16dp"
                android:layout_width="195dp"
                android:layout_height="30dp"
                android:layout_marginRight="8dp"
                android:text="Falar com o anunciante"
                android:stateListAnimator="@null"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/ic_chat"

                android:layout_alignParentRight="true"
              />

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>